<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ActivityCustomerInformation">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbardep"
        android:background="@color/blue"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:srcCompat="?attr/actionModeCloseDrawable"
            app:titleTextColor="#fff"
            app:title="Thông tin khách hàng"
            app:tint="@color/white" />
        <TextView
            android:layout_height="wrap_content"
            android:text="@string/customerInfo"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:layout_width="230dp"/>
</androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp">

        <ImageView
            android:id="@+id/customer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/namecustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="42dp"
            android:textColor="@color/blue"
            android:textSize="23dp"
            android:text="Bùi Huy Đông" />

    </LinearLayout>


    <ListView
        android:id="@+id/listviewcustomer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
