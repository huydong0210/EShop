<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.activity.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewBackBtnSearchProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            tools:srcCompat="?attr/actionModeCloseDrawable" />

        <SearchView
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:id="@+id/searchSearchProduct"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rectangle_5"/>
        <ImageView
            android:id="@+id/imageViewCartSearchProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            tools:srcCompat="@drawable/shoppingcart" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewSearchProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_3"
        android:layout_marginTop="100dp" />

</FrameLayout>
