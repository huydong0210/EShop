<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.activity.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <SearchView
            android:id="@+id/searchSearchProduct"
            android:layout_width="341dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rectangle_5" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewSearchProduct"
        android:layout_width="match_parent"
        android:layout_height="583dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/rectangle_3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="680dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonHomeSearchProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="Home"
            app:srcCompat="@drawable/icon_home" />

        <ImageButton
            android:id="@+id/imageButtonCartSearchProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:contentDescription="Cart"
            app:srcCompat="@drawable/icon_cart" />

        <ImageButton
            android:id="@+id/imageButtonUserSearchProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="User"
            app:srcCompat="@drawable/icon_user" />

    </LinearLayout>

</FrameLayout>
