<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_5_ek3_shape"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewHomeProduct"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewHomeProductName"
                android:layout_width="260dp"
                android:layout_height="54dp"
                android:layout_marginLeft="5dp"
                android:text="TextView"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewHomeProductProductPrice"
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="TextView"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_marginLeft="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/buttonHomeProductAddToCart"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_background"
                        android:layout_weight="1"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/next"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/next_color"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="70dp"
                        android:layout_height="37dp"
                        android:text="ThÃªm" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/buttonSignUpSignUp"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/buttonHomeProductProductInfor"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_background"
                        android:layout_weight="1"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="37dp"
                        android:layout_marginLeft="26dp"
                        android:layout_marginTop="5dp"
                        android:text="Xem"
                        android:textColor="@color/next_color"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>