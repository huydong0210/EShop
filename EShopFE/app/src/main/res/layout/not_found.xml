<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.activity.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewBackBtnNotFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            tools:srcCompat="?attr/actionModeCloseDrawable" />

        <SearchView
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:id="@+id/searchNotFound"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rectangle_5"/>
        <ImageView
            android:id="@+id/imageViewCartNotFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            tools:srcCompat="@drawable/shoppingcart" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:src="@drawable/feather_search"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="130dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/item_not_fo"
        android:layout_width="229dp"
        android:layout_height="69dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal|top"
        android:text="@string/item_not_fo"
        android:textAppearance="@style/item_not_fo" />

    <TextView
        android:id="@+id/try_searchi"
        android:layout_width="262dp"
        android:layout_height="66dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="18dp"
        android:alpha="0.57"
        android:gravity="center_horizontal|top"
        android:text="@string/try_searchi"
        android:textAppearance="@style/try_searchi" />


</LinearLayout>
