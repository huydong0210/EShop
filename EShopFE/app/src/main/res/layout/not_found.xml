<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.activity.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <SearchView
            android:id="@+id/searchNotFound"
            android:layout_width="351dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rectangle_5" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:src="@drawable/feather_search"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="130dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/item_not_fo"
        android:layout_width="229dp"
        android:layout_height="69dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal|top"
        android:text="@string/item_not_fo"
        android:textAppearance="@style/item_not_fo" />

    <TextView
        android:id="@+id/try_searchi"
        android:layout_width="262dp"
        android:layout_height="66dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="18dp"
        android:alpha="0.57"
        android:gravity="center_horizontal|top"
        android:text="@string/try_searchi"
        android:textAppearance="@style/try_searchi" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonHomeNotFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="Home"
            app:srcCompat="@drawable/icon_home" />

        <ImageButton
            android:id="@+id/imageButtonCartNotFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:contentDescription="Cart"
            app:srcCompat="@drawable/icon_cart" />

        <ImageButton
            android:id="@+id/imageButtonUserNotFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="User"
            app:srcCompat="@drawable/icon_user" />

    </LinearLayout>


</LinearLayout>
