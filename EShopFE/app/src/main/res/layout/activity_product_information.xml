<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.activity.ProductInformationActivity">

    <ImageView
        android:id="@+id/imageViewProductInforImage"
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:background="@drawable/rectangle_8"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewProductInforName"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:textSize="22dp"
        android:textAlignment="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewProductInforPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0000ff"
        android:textAlignment="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewProductInforQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewProductInforDescription"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/buttonProductInforAddToCart"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:layout_weight="1"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/next"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/next_color"
                android:layout_marginTop="5dp"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:textAlignment="center"
                android:text="Trang chủ" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/buttonSignUpSignUp"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/buttonProductInforHome"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:layout_weight="1"
                android:textSize="12dp" />

            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/next_color"
                android:layout_marginTop="5dp"
                android:layout_width="220dp"
                android:layout_height="37dp"
                android:textAlignment="center"
                android:text="Thêm vào giỏ hàng" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>