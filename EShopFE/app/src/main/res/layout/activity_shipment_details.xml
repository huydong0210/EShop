<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user_infor.activity.ShipmentDetailsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#0000FF"
        android:text="Danh sách địa chỉ" />

    <ListView
        android:id="@+id/listViewShipmentDetailsList"
        android:layout_width="match_parent"
        android:layout_height="598dp"
        android:layout_marginTop="30dp">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/buttonShipmentDetailsAdd"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:layout_weight="1"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/next"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/next_color"
                android:layout_marginTop="5dp"
                android:layout_width="180dp"
                android:layout_height="37dp"
                android:textAlignment="center"
                android:text="Thêm" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/buttonSignUpSignUp"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/buttonShipmentDetailsBack"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:layout_weight="1"
                android:textSize="12dp" />

            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/next_color"
                android:layout_marginTop="5dp"
                android:layout_width="180dp"
                android:layout_height="37dp"
                android:textAlignment="center"
                android:text="Trở về" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>