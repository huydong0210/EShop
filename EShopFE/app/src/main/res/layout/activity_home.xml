<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.activity.HomeActivity">

    <FrameLayout
        android:id="@+id/listViewContainer"
        android:layout_width="200dp"
        android:layout_height="732dp"
        android:visibility="invisible">

        <ListView
            android:id="@+id/listViewListHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="EShop"
            android:textColor="#0000FF"
            android:textSize="22dp"
            android:textAlignment="center"/>

        <SearchView
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:id="@+id/searchHome"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rectangle_5"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listViewHomeAllProducts"
        android:layout_width="match_parent"
        android:layout_height="579dp"
        android:layout_marginTop="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="680dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonHomeHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="Home"
            app:srcCompat="@drawable/icon_home" />

        <ImageButton
            android:id="@+id/imageButtonCartHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:contentDescription="Cart"
            app:srcCompat="@drawable/icon_cart" />

        <ImageButton
            android:id="@+id/imageButtonUserHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="User"
            app:srcCompat="@drawable/icon_user" />

    </LinearLayout>

</FrameLayout>
