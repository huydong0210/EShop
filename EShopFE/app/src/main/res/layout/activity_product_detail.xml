    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewBackBtnSearchProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            tools:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="15dp"
            android:textSize="25dp"
            android:text="Chi tiết sản phẩm"
            android:textAlignment="center" />
        <ImageView
            android:id="@+id/imageViewCartSearchProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            tools:srcCompat="@drawable/shoppingcart" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imageProductDetail"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewProductDetailName"
                android:layout_margin="3dp"
                android:text="Tên sản phẩm"
                android:textColor="#0000FF"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textViewProductDetailPrice"
                android:layout_margin="3dp"
                android:textSize="20sp"
                android:text="Giá sản phẩm"
                android:textColor="#0000FF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/SpinerProductDetail"
                android:layout_margin="3dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_4"
                android:gravity="center"
                android:padding="13dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>

            <Button
                android:text="Thêm vào giỏ hàng"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:background="@drawable/rectangle_4"
                android:id="@+id/BtnBuyProductDetail"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="#0000FF"
            android:layout_marginTop="7dp"
            android:textSize="25sp"
            android:text="Mô tả chi tiết sản phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewProductDetailDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:textSize="18sp" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>dget.ConstraintLayout>