<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewCartOrderDetailsImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCartOrderDetailsPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_margin="5px"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewCartOrdeDetailsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_margin="5px"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewCartOrderDetailsAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_margin="5px"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewCartOrderDetailsTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:textSize="20dp"
                android:text="TextView" />

            <Button
                android:id="@+id/buttonCartOrderDetailsDeleteItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:textSize="20dp"
                android:text="Xoá khỏi giỏ hàng" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>