<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000FF"
    android:orientation="vertical"
    tools:context=".login.activity.LoginActivity"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <TextView
        android:id="@+id/textViewLoginLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:text="Đăng nhập"
        android:textColor="#fff"
        android:textSize="40sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewLoginLogin"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp">
            <EditText
                android:id="@+id/editTextLoginUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:background="@drawable/rectangle_7"
                android:hint="Username"/>

            <EditText
                android:id="@+id/editTextLoginPassword"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_7"
                android:layout_height="50dp"
                android:hint="Password"
                android:inputType="textPassword" />
            <RelativeLayout
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/buttonLoginLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/rectangle_5_ek4_shape"
                    android:layout_weight="1"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/next"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/next_color"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:textAlignment="center"
                    android:text="Đăng nhập" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/buttonSignUpSignUp"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/buttonLoginSignUp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="25dp"
                    android:layout_height="50dp"
                    android:background="@drawable/rectangle_5_ek4_shape"
                    android:layout_weight="1"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginTop="38dp"
                    android:text="Đăng ký"
                    android:textAlignment="center"
                    android:textColor="@color/next_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>